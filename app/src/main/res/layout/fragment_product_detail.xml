<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:padding="20dp"
                android:focusableInTouchMode="true">

    <android.support.design.widget.TextInputLayout
        android:id="@+id/layout_name_text_input"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <android.support.design.widget.TextInputEditText
            android:id="@+id/product_name_edit"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            style="@style/edit_text_format"
            android:background="@color/textBoxBackground"
            android:hint="@string/product_name_string"
            android:layout_centerHorizontal="true"
            android:gravity="center_horizontal"
            />

    </android.support.design.widget.TextInputLayout>

    <android.support.design.widget.TextInputLayout
        android:id="@+id/layout_brand_text_input"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/layout_name_text_input">

        <android.support.design.widget.TextInputEditText
            android:id="@+id/product_brand_edit"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="@string/brand_string"
            />
    </android.support.design.widget.TextInputLayout>



    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true">

        <!-- TODO better button coloring -->
        <Button
            android:id="@+id/product_delete_button"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/delete_button_string"
            android:backgroundTint="@color/deleteButton"
            android:textColor="#ffffff"
            />

        <Button
            android:id="@+id/product_save_button"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/save_button_string"
            android:backgroundTint="@color/colorPrimary"
            android:textColor="#ffffff"/>
    </LinearLayout>

</RelativeLayout>