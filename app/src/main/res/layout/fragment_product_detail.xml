<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:padding="20dp"
                android:focusableInTouchMode="true">

    <RelativeLayout
        android:id="@+id/product_loading_layout"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:gravity="center">

        <ProgressBar
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:indeterminate="true"/>

    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/product_fragment_detail_layout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        >

        <android.support.design.widget.TextInputLayout
            android:id="@+id/layout_name_text_input"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="20dp">

            <android.support.design.widget.TextInputEditText
                android:id="@+id/product_name_edit"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                style="@style/edit_text_format"
                android:background="@color/textBoxBackground"
                android:hint="@string/product_name_string"
                android:layout_centerHorizontal="true"
                android:gravity="center_horizontal"
                />

        </android.support.design.widget.TextInputLayout>

        <android.support.design.widget.TextInputLayout
            android:id="@+id/layout_brand_text_input"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/layout_name_text_input"
            android:layout_marginBottom="20dp">

            <android.support.design.widget.TextInputEditText
                android:id="@+id/product_brand_edit"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="@string/brand_string"
                />
        </android.support.design.widget.TextInputLayout>

        <LinearLayout
            android:id="@+id/layout_type_layout"
            android:layout_below="@id/layout_brand_text_input"
            android:gravity="center"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginLeft="30dp"
            android:layout_marginRight="30dp">

            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:text="@string/product_type"
                style="@style/default_field_label_format"
                android:layout_weight="1"/>

            <Spinner
                android:id="@+id/product_type_spinner"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="3"
                >

            </Spinner>

        </LinearLayout>

    </RelativeLayout>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true">

        <!-- TODO better button coloring -->
        <Button
            android:id="@+id/product_delete_button"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/delete_button_string"
            android:backgroundTint="@color/deleteButton"
            android:textColor="#ffffff"
            />

        <Button
            android:id="@+id/product_save_button"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/save_button_string"
            android:backgroundTint="@color/colorPrimary"
            android:textColor="#ffffff"/>
    </LinearLayout>
</RelativeLayout>