<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
                android:layout_width="match_parent"
                android:layout_height="match_parent">

    <ListView
        android:id="@+id/product_main_list_view"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_above="@+id/product_main_new_button"
        android:background="@drawable/rectangle_border"
        android:layout_alignParentTop="true"
        >

    </ListView>

    <TextView
        android:id="@+id/product_main_no_products_text"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_above="@id/product_main_new_button"
        android:background="@drawable/rectangle_border"
        android:layout_alignParentTop="true"
        android:visibility="invisible"
        android:text="@string/product_main_no_products"
        android:gravity="center"/>

    <Button
        android:id="@+id/product_main_new_button"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:text="@string/new_product"
        style="@style/primary_button_style"
        android:layout_alignParentBottom="true"
        android:layout_marginBottom="20dp"
        android:layout_marginTop="10dp"/>

</RelativeLayout>