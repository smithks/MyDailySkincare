<?xml version="1.0" encoding="utf-8"?>
<manifest package="com.smithkeegan.mydailyskincare"
          xmlns:android="http://schemas.android.com/apk/res/android">

    <application
        android:allowBackup="true"
        android:icon="@drawable/ic_warning_black_24dp"
        android:label="@string/app_name"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity
            android:name=".ui.CalendarActivityMain"
            android:label="@string/app_name"
            android:theme="@style/AppTheme.NoActionBar">
            <intent-filter>
                <action android:name="android.intent.action.MAIN"/>

                <category android:name="android.intent.category.LAUNCHER"/>
            </intent-filter>
        </activity>
        <activity android:name=".ui.diaryEntry.DiaryEntryActivityMain"
                  android:label="Entry"
                  android:parentActivityName=".ui.CalendarActivityMain"
                  >
        </activity>
        <activity android:name=".ui.product.ProductActivityMain"
                  android:label="@string/products"
                  android:parentActivityName=".ui.CalendarActivityMain">

        </activity>
        <activity android:name=".ui.routine.RoutineActivityMain"
                  android:label="Routines"
                    android:parentActivityName=".ui.CalendarActivityMain">

        </activity>
        <activity android:name=".ui.routine.RoutineActivityDetail"
                  android:windowSoftInputMode="adjustPan"
                  android:parentActivityName=".ui.routine.RoutineActivityMain">

        </activity>
        <activity android:name=".ui.product.ProductActivityDetail"
                  android:windowSoftInputMode="adjustPan"
                  android:parentActivityName=".ui.product.ProductActivityMain">

        </activity>
        <activity android:name=".ui.ingredient.IngredientActivityMain"
                  android:label="Ingredients"
                  android:parentActivityName=".ui.CalendarActivityMain">

        </activity>
        <activity android:name=".ui.ingredient.IngredientActivityDetail"
                  android:windowSoftInputMode="adjustPan"
                  android:parentActivityName=".ui.ingredient.IngredientActivityMain">

        </activity>
        <activity android:name=".ui.analytics.AnalyticsActivityMain"
                  android:parentActivityName=".ui.CalendarActivityMain">

        </activity>
    </application>
</manifest>